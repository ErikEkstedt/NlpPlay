{
  "train_data_path": "data/alexa/test.csv",
  "dataset_reader": {
    "type": "Alexa",
    "source_tokenizer": {
      "type": "word"
    },
    "source_token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true,
        "namespace": "tokens"
      }
    }
  },
  "model": {
    "type": "simple_seq2seq",
    "source_embedder": {
      "tokens": {
        "type": "embedding",
        "vocab_namespace": "tokens",
        "embedding_dim": 100,
        "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.100d.txt.gz",
        "trainable": true
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 100,
      "hidden_size": 256,
      "num_layers": 2
    },
    "max_decoding_steps": 100
  },
  "iterator": {
    "type": "bucket",
    "padding_noise": 0.0,
    "batch_size" : 8,
    "sorting_keys": [["source_tokens", "num_tokens"]]
  },
  "trainer": {
    "num_epochs": 20,
    "patience": 20,
    "cuda_device": 0,
    "optimizer": {
      "type": "adam",
      "lr": 0.01
    }
  }
}
